<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section with Modern Gradient -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#1A1A2E">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/m10"
                    android:textSize="38sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:letterSpacing="0.02"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/tvWelcomeMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/m11"
                    android:textSize="17sp"
                    android:textColor="#00D9FF"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/m12"
                    android:textSize="14sp"
                    android:textColor="#B8C5D6"
                    android:alpha="0.9"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Quiz Topic Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="18dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/m13"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#2D3748"
                    android:layout_marginBottom="14dp"/>

                <EditText
                    android:id="@+id/etQuizTopic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/m14"
                    android:textColorHint="#A0AEC0"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:textColor="#2D3748"
                    android:background="@drawable/edit_text_background"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Number of Questions Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="18dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/m15"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#2D3748"
                    android:layout_marginBottom="14dp"/>

                <EditText
                    android:id="@+id/etNumQuestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/m16"
                    android:textColorHint="#A0AEC0"
                    android:inputType="number"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:textColor="#2D3748"
                    android:background="@drawable/edit_text_background"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Question Type Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="18dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/m17"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#2D3748"
                    android:layout_marginBottom="14dp"/>

                <RadioGroup
                    android:id="@+id/rgQuestionType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rbMCQ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/m18"
                        android:checked="true"
                        android:padding="14dp"
                        android:textSize="16sp"
                        android:textColor="#4A5568"/>

                    <RadioButton
                        android:id="@+id/rbTrueFalse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="True/False"
                        android:padding="14dp"
                        android:textSize="16sp"
                        android:textColor="#4A5568"/>

                    <RadioButton
                        android:id="@+id/rbFillBlank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/m20"
                        android:padding="14dp"
                        android:textSize="16sp"
                        android:textColor="#4A5568"/>

                    <RadioButton
                        android:id="@+id/rbShortAnswer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/m21"
                        android:padding="14dp"
                        android:textSize="16sp"
                        android:textColor="#4A5568"/>

                    <RadioButton
                        android:id="@+id/rbMixed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/m22"
                        android:padding="14dp"
                        android:textSize="16sp"
                        android:textColor="#4A5568"/>
                </RadioGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Difficulty Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="18dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/m23"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#2D3748"
                    android:layout_marginBottom="14dp"/>

                <RadioGroup
                    android:id="@+id/rgDifficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rbEasy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/m24"
                        android:padding="14dp"
                        android:textSize="16sp"
                        android:textColor="#4A5568"/>

                    <RadioButton
                        android:id="@+id/rbMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/m25"
                        android:checked="true"
                        android:padding="14dp"
                        android:textSize="16sp"
                        android:textColor="#4A5568"/>

                    <RadioButton
                        android:id="@+id/rbHard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/m26"
                        android:padding="14dp"
                        android:textSize="16sp"
                        android:textColor="#4A5568"/>

                    <RadioButton
                        android:id="@+id/rbExpert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/m27"
                        android:padding="14dp"
                        android:textSize="16sp"
                        android:textColor="#4A5568"/>
                </RadioGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Primary Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartQuiz"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="@string/m28"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:elevation="6dp"
            android:layout_marginBottom="16dp"
            android:letterSpacing="0.03"
            app:backgroundTint="@null"
            android:background="@drawable/button_primary"
            app:cornerRadius="16dp"/>

        <!-- Secondary Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDashboard"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:text="@string/m29"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#1A1A2E"
                android:layout_marginEnd="8dp"
                app:backgroundTint="@null"
                android:background="@drawable/button_badges"
                app:cornerRadius="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewBadges"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:text="@string/m30"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#1A1A2E"
                app:backgroundTint="@null"
                android:background="@drawable/button_badges"
                app:cornerRadius="16dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>