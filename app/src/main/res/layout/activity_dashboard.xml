<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FB">

    <!-- Decorative background gradient -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/gradient_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Welcome Card Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/welcomeCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_graduation_cap"
                android:tint="#3F51B5"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/s16"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:gravity="center"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/s17"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- ScrollView containing the three agent cards -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/welcomeCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Agent 1 Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/agent1Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_calendar"
                            android:tint="#3F51B5"
                            android:padding="8dp"
                            android:background="@drawable/icon_background_blue"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/s18"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#222"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/s19"
                                android:textSize="13sp"
                                android:textColor="#666"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/agent1Btn"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="@string/s20"
                        android:backgroundTint="#3F51B5"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        android:elevation="0dp"
                        android:layout_marginTop="16dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Agent 2 Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/agent2Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_book"
                            android:tint="#009688"
                            android:padding="8dp"
                            android:background="@drawable/icon_background_teal"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/s21"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#222"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/s22"
                                android:textSize="13sp"
                                android:textColor="#666"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/agent2Btn"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="@string/s23"
                        android:backgroundTint="#009688"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        android:elevation="0dp"
                        android:layout_marginTop="16dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Agent 3 Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/agent3Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_lightbulb"
                            android:tint="#FF5722"
                            android:padding="8dp"
                            android:background="@drawable/icon_background_orange"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/s24"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#222"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/s25"
                                android:textSize="13sp"
                                android:textColor="#666"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/agent3Btn"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Open Quiz Generator"
                        android:backgroundTint="#FF5722"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        android:elevation="0dp"
                        android:layout_marginTop="16dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>