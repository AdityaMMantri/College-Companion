<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MessageBubble">
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="UserBubble" parent="MessageBubble">
        <item name="android:background">@drawable/user_bubble</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AIBubble" parent="MessageBubble">
        <item name="android:background">@drawable/ai_bubble</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>
</resources>